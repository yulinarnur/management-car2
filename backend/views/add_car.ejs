<%- include('layout/dashboard_header') %>

<div class="container-fluid py-4">
  <div class="row">
    <div class="col-9" style="margin-left: 20%">
      <div class="card mb-4">
        <div class="card-header pb-0">
          <h6>Add New Car</h6>
        </div>
        <div class="card-body px-4 pt-0 pb-2">
          <form action="/cars" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="model" class="form-label">Model</label>
              <input
                type="text"
                class="form-control"
                id="model"
                name="model"
                required
              />
            </div>
            <div class="mb-3">
              <label for="rentPerDay" class="form-label">Harga Sewa</label>
              <input
                type="number"
                class="form-control"
                id="rentPerDay"
                name="rentPerDay"
                required
              />
            </div>
            <div class="mb-3">
              <label for="images" class="form-label">Image</label>
              <input
                type="file"
                class="form-control"
                id="images"
                name="images"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary">Add Car</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('layout/dashboard_footer') %>
